<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="teclan.spring.dao.LogDao">
    <select id="findOne" resultType="teclan.spring.model.Log" parameterType="java.lang.Integer">
        select *  from log
        where
            id=#{id}
    </select>

    <delete id="delete"  parameterType="java.lang.Integer">
        delete from log where id=#{id}
    </delete>

    <delete id="deleteBatch" >
        delete from log where id in
        <foreach item="item" index="index" collection="ids"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <insert id="create" parameterType="teclan.spring.model.Log">
        insert into log (`id`,`session_id`,`url`,`parameter`,`status`,`result`,`created_at`)
        values (#{id},#{sessionId},#{url},#{parameter},#{status},#{result},#{createdAt});
    </insert>

    <insert id="update" parameterType="teclan.spring.model.Log">
        update log set

        <if test="sessionId!=null">
           `session_id`=#{sessionId},
        </if>

        <if test="url!=null">
            `url`=#{url},
        </if>
        <if test="parameter!=null">
            `parameter`=#{parameter},
        </if>
        <if test="status!=null">
            `status`=#{status},
        </if>
        <if test="result!=null">
            `result`=#{result},
        </if>
        <if test="createdAt!=null">
            `created_at`=#{createdAt},
        </if>
        `id`=#{id}
        where
            `id`=#{id}
    </insert>
</mapper>